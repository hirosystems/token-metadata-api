{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "npm: test:run:pg",
      "type": "shell",
      "command": "npm run test:run:pg -- -d",
      "isBackground": true,
      "problemMatcher": [
        {
          "pattern": [
            { "regexp": ".", "file": 1, "location": 2, "message": 3 }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": ".",
            "endsPattern": "."
          }
        }
      ]
    },
    {
      "label": "npm: test:stop:pg",
      "type": "shell",
      "command": "npm run test:stop:pg",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    }
  ]
}
